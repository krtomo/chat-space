.message{data:{id: message.id}}
  .message__info
    .message__info__speaker
      = message.user.name
    .message__info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__content  
    -# 画像のみのときもあるので、条件分岐　
    - if message.body.present?
      %p.message__content__text
        = message.body
    = image_tag message.image.url, class: 'message__content__image' if message.image.present?